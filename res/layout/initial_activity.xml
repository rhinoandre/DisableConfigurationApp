<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/alarmAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="23dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/ic_alarm_add"
        android:src="@android:drawable/ic_menu_add" 
        android:onClick="addAlarm" />

    <DigitalClock
        android:id="@+id/digitalClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/alarmAddBtn"
        android:layout_centerHorizontal="true"
        android:textSize="10pt" 
        android:onClick="settings"/>

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/alarmAddBtn"
        android:layout_marginRight="22dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/ic_settings"
        android:src="@android:drawable/ic_menu_preferences" />

    <ListView
        android:id="@+id/listAlarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/alarmAddBtn" >

    </ListView>

</RelativeLayout>